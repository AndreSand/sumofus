<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.dbykovskyy.sumofus.activity.CampaignDetailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/ivCampaignDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCampaignDetail"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:text="Our goal is"
        android:id="@+id/tvOurGoalIs" />

    <com.example.dbykovskyy.sumofus.utils.CustomProgress
        android:id="@+id/pbGoal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tvOurGoalIs"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tvCampaignTextDetail"
        android:layout_below="@+id/pbGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Some text"
        android:textSize="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAKE AN ACTION"
        android:textColor="@color/white"
        android:id="@+id/btTakeActionDetail"
        android:background="@color/orange"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"


        />



</LinearLayout>




</ScrollView>
